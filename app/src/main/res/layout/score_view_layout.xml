<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.scoreBoard.fragments.home.HomeFragment"
        >

    <TextView
            android:id="@+id/txt1TeamName"
            style="@style/txtScoreTeamTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:id="@+id/txt1Colon"
            style="@style/txtScoreTeamTitle"
            android:text="-"
            android:layout_marginLeft="@dimen/dp5"
            app:layout_constraintLeft_toRightOf="@id/txt1TeamName"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:id="@+id/txt1TeamScore"
            style="@style/txtScoreTeamTitle"
            android:layout_marginLeft="@dimen/dp5"
            app:layout_constraintLeft_toRightOf="@id/txt1Colon"
            app:layout_constraintTop_toTopOf="parent"
            android:text="200"
    />
    <TextView
            android:id="@+id/slash"
            style="@style/txtScoreTeamTitle"
            app:layout_constraintLeft_toRightOf="@id/txt1TeamScore"
            app:layout_constraintTop_toTopOf="parent"
            android:text="/"
    />
    <TextView
            android:id="@+id/txt1TeamWicket"
            style="@style/txtScoreTeamTitle"
            app:layout_constraintLeft_toRightOf="@id/slash"
            app:layout_constraintTop_toTopOf="parent"
            android:text="0"
    />
    <TextView
            android:id="@+id/txt1TeamOvers"
            style="@style/txtScoreTeamTitle"
            app:layout_constraintLeft_toRightOf="@id/txt1TeamWicket"
            app:layout_constraintTop_toTopOf="parent"
            android:text="(20.0)"
    />
</androidx.constraintlayout.widget.ConstraintLayout>